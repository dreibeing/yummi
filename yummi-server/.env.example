# Core
ENVIRONMENT=staging
APP_NAME=yummi-server
LOG_JSON=true
LOG_LEVEL=INFO

# Auth (Clerk)
CLERK_ISSUER=https://YOUR-CLERK-DOMAIN/.well-known/jwks.json
CLERK_JWKS_URL=
CLERK_AUDIENCE=YOUR-CLERK-AUDIENCE
# For local dev only; never set in prod
AUTH_DISABLE_VERIFICATION=false

# Data
DATABASE_URL=postgresql://postgres:postgres@db:5432/yummi
REDIS_URL=redis://redis:6379/0
CATALOG_PATH=resolver/catalog.json

# API
CORS_ALLOWED_ORIGINS=https://yourapp.example.com,https://staging.yourapp.example.com
REQUEST_MAX_BODY_MB=25
ADMIN_EMAILS=you@example.com

# OpenAI
OPENAI_API_KEY=
OPENAI_ALLOWED_MODELS=gpt-4o-mini,gpt-4o,o4-mini
OPENAI_DEFAULT_MODEL=gpt-4o-mini

# PayFast
PAYFAST_MERCHANT_ID=
PAYFAST_MERCHANT_KEY=
PAYFAST_PASSPHRASE=
PAYFAST_NOTIFY_URL=https://yourdomain.com/payments/payfast/itn
PAYFAST_RETURN_URL=https://yourdomain.com/payfast/return
PAYFAST_CANCEL_URL=https://yourdomain.com/payfast/cancel
PAYFAST_MODE=sandbox
PAYFAST_PDT_TOKEN=

# Observability
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.0
